<Window x:Class="VRCStalker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRCStalker"
        mc:Ignorable="d"
        Title="VRCStalker" Height="450" Width="800">
    <Grid Background="#FF1D1D1D">
        <Label x:Name="label" Content="VRCStalker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="44" Width="254" Foreground="#FFAFAFAF" FontSize="24"/>
        <Label x:Name="helloLabel" Content="Hello, User" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="44" Width="327" Foreground="#FFAFAFAF" FontSize="16"/>
        <ToggleButton x:Name="locationToggle" Content="Location Changes" Style="{StaticResource ToggleButtonStyle1}" Margin="10,104,588,271" Foreground="#FFAFAFAF" Checked="locationToggle_Checked" Unchecked="locationToggle_Unchecked"/>
    </Grid>
</Window>
